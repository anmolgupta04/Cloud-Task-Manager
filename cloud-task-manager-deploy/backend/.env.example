# ── App ─────────────────────────────────────────────────────
APP_NAME=Cloud Task Manager
APP_ENV=development
DEBUG=false

# ── Security ────────────────────────────────────────────────
# IMPORTANT: Change this to a random 64-char string in production!
SECRET_KEY=change-me-to-a-random-secure-string-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Database ────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/taskdb
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ── Redis ───────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# ── CORS ────────────────────────────────────────────────────
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]
